<div class="container mt-4">
  <h1 class="mb-4">Restaurants</h1>

    <% @restaurants.each do |restaurant| %>
      <p><strong>Name:</strong> <%= restaurant.name %></p>
      <p><strong>Adress:</strong> <%= restaurant.address %></p>
      <p><strong>Phone number:</strong> <%= restaurant.phone_number %></p>
      <p><strong>Category:</strong> <%= restaurant.category %></p>
      <p class="mb-5"><%= link_to "Details", restaurant_path(restaurant) %></p>
    <% end %>

  <%= link_to "Add a new restaurant", new_restaurant_path %>
</div>
